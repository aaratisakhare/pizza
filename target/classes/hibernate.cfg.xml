<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    	<property name="hibernate.connection.url">jdbc:mysql://localhost/sunbeam</property>
    	<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.username">aarati</property>
    	<property name="hibernate.connection.password">aarati</property>	
    	<property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
    	<property name="hibernate.show_sql">true</property>
    	<property name="hibernate.current_session_context_class">thread</property>
    	
    	<mapping class="com.pizzahut.pizza.model.PizzaCustomers"/>
    	<mapping class="com.pizzahut.pizza.model.PizzaItems"/>
    	<mapping class="com.pizzahut.pizza.model.PizzaOrderDetails"/>
    	<mapping class="com.pizzahut.pizza.model.PizzaOrders"/>
    	<mapping class="com.pizzahut.pizza.model.PizzaPricing"/>
    </session-factory>
</hibernate-configuration>